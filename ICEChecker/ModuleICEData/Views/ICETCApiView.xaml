                <ScrollViewer Grid.Row="2"  
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListView ItemsSource="{Binding CompareDetails}">
                    <ListView.Resources>
                        <Style x:Key="HoverEffect" TargetType="{x:Type Border}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="15" Direction="0" RenderingBias="Quality" ShadowDepth="1" Color="#FFBBBBBB"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>
                    <ListView.Style>
                        <Style TargetType="{x:Type ListView}">
                            <Style.Triggers>
                                <Trigger Property="HasItems" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Style>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <Border BorderBrush="Black" BorderThickness="1" Padding="2"  Margin="0,5,5,5" HorizontalAlignment="Stretch"  VerticalAlignment="Top">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Deal ID: " FontSize="14"/>
                                            <TextBlock Text="{Binding DealID}" FontSize="14"/>
                                            <TextBlock Text="{Binding DifferentFields}" FontSize="14" FontWeight="Bold" Background="Yellow" Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <Separator/>
                                        <TextBlock Text="{Binding DifferenceDesc}"/>
                                    </StackPanel>
                                </Border>
                            </WrapPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                </ScrollViewer>
            </Grid>
        </Border>

        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="2" Background="Transparent" Margin="5,0,5,0" />
        <!--<GridSplitter Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="2" Background="Transparent" Margin="5,0,5,0" />-->

        <GridSplitter Grid.Column="1" Grid.RowSpan="4" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="2" Background="Gray" Margin="0,5,0,5" />
    </Grid>
</UserControl>